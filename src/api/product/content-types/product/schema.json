{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "maxLength": 250
    },
    "shortDescription": {
      "type": "string",
      "maxLength": 45
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "files",
        "images"
      ]
    },
    "status_product": {
      "type": "string",
      "default": "a",
      "maxLength": 1,
      "required": true
    },
    "raffles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::raffle.raffle",
      "mappedBy": "product"
    }
  }
}
