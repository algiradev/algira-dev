{
  "kind": "collectionType",
  "collectionName": "suggestions",
  "info": {
    "singularName": "suggestion",
    "pluralName": "suggestions",
    "displayName": "Suggestion"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "email": {
      "type": "email"
    },
    "message": {
      "type": "text",
      "maxLength": 250,
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "feedback",
        "contact"
      ]
    },    
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    }
  }
}
